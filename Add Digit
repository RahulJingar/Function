
#include<bits/stdc++.h>
using namespace std;
int addDigit(int num)
{
    int ans=0;
    while(num)
    {
        int rem=num%10;
        ans=ans+rem;
        num/=10;
    }
    return ans;
}
int main()
{
    int num;
    cout<<"enter the value of num:";
    cin>>num;
    cout<<addDigit(num);
    return 0;
}
